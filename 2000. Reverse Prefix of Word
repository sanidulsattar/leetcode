class Solution {
    public String reversePrefix(String word, char ch) {

        StringBuilder sb = new StringBuilder();
        int i;
        for( i=0; i<word.length(); i++)
        {
            if(word.charAt(i)==ch)
            {
                sb.append(word.charAt(i));
                break;
                }
            else
            {
                sb.append(word.charAt(i));
            if(i==word.length()-1)
                return sb.toString();
            }
            
        }        
        sb.reverse();
        i++;
        while(i<word.length())
        {
            
            sb.append(word.charAt(i));
            i++;
        }
    return sb.toString();
    }
}
